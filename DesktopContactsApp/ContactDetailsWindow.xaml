<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="350" Width="450">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name"/>
            <TextBox x:Name="nameTextBox" Margin="0 0 0 10"></TextBox>
            <TextBlock Text="Email"/>
            <TextBox x:Name="emailTextBox" Margin="0 0 0 10"></TextBox>
            <TextBlock Text="Phone"/>
            <TextBox x:Name="phoneTextBox" Margin="0 0 0 10"></TextBox>
            <Button Click="UpdateButton_Click" Content="Update"
                    Margin="0 0 0 10"></Button>
            <Button Click="DeleteButton_Click" Content="Delete" 
                    Background="Red"
                    Foreground="White"></Button>
        </StackPanel>
        
    </Grid>
</Window>
