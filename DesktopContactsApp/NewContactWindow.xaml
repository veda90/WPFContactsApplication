<Window x:Class="DesktopContactsApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="350" Width="450">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="nameTextBox" Margin="0 0 0 10"></TextBox>
            <TextBox x:Name="emailTextBox" Margin="0 0 0 10"></TextBox>
            <TextBox x:Name="phoneTextBox" Margin="0 0 0 10"></TextBox>
            <Button Click="AddNewContact" Content="Save"></Button>
        </StackPanel>
        
    </Grid>
</Window>
